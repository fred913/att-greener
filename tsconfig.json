        "declaration": false,
        "strict": true,
        "sourceMap": false,
        "rootDir": "src",
        "outDir": "dist",
        "esModuleInterop": true,
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable",
        ]
    },
    "include": [
        "src/**/*"
    ]
}